<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class = "media">
  <div class = "media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.date %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Show', post, class: 'btn btn-mini'  %></td>
            <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', post, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Post', new_post_path %>
